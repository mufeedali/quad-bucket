[Unit]
Description=SilverBullet - Markdown Note-taking

[Service]
EnvironmentFile=%h/.config/containers/systemd/.env
Restart=on-abnormal
TimeoutStartSec=60s
TimeoutStopSec=30s

[Install]
WantedBy=multi-user.target default.target

[Container]
# Container properties
ContainerName=silverbullet
Image=ghcr.io/silverbulletmd/silverbullet:2.4.1
AutoUpdate=registry
Pull=newer

# Environment options
EnvironmentFile=.env

# Network options
Network=shared-network

# Volume binds
Volume=%h/container-data/silverbullet/:/space

# Traefik Labels
Label="traefik.enable=true"
Label="traefik.http.routers.silverbullet.rule=Host(`sb.${DOMAIN_URL}`)"
Label="traefik.http.routers.silverbullet.entrypoints=web-secure,web-secure-internal"
Label="traefik.http.services.silverbullet.loadbalancer.server.port=3000"

# Glance Labels
Label="glance.name=SilverBullet"
Label="glance.icon=https://cdn.jsdelivr.net/gh/selfhst/icons/webp/silverbullet.webp"
Label="glance.url=https://sb.${DOMAIN_URL}"
Label="glance.description=Markdown Note-taking"
Label="glance.id=silverbullet"
