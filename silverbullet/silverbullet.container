[Unit]
Description=SilverBullet - Markdown Note-taking

[Install]
WantedBy=multi-user.target default.target

[Container]
ContainerName=silverbullet
Image=ghcr.io/silverbulletmd/silverbullet:v2
AutoUpdate=registry
Pull=newer

# Volumes
Volume=./container-data/silverbullet/:/space

# Network
Network=shared-network

# Environment variables
EnvironmentFile=.env

# Traefik labels
Label="traefik.enable=true"
Label="traefik.http.routers.silverbullet.rule=Host(`sb.${DOMAIN_URL}`)"
Label="traefik.http.routers.silverbullet.entrypoints=web-secure,web-secure-internal"
Label="traefik.http.routers.silverbullet.middlewares=pocket-id"

[Service]
EnvironmentFile=%h/.config/containers/systemd/.env
Restart=always
TimeoutStartSec=60s
TimeoutStopSec=30s
